<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.bookmarks.BookmarksFragment">

    <fragment
        android:id="@+id/search"
        android:name="com.ceri.deepmusic.ui.searchbar.SearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="15dp"
        tools:layout="@layout/search_bar_fragment" />

    <fragment
        android:id="@+id/genres"
        android:name="com.ceri.deepmusic.ui.musics.MusicsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_musics_list" />

</LinearLayout>