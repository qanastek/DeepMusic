#
# The server creates one single object adapter with the name
# "Hello". The following line sets the endpoints for this
# adapter.
#
Hello.Endpoints=tcp -p 10000:udp -p 10000:ssl -p 10001:ws -p 10002:wss -p 10003

#
# Only listen on the localhost interface by default.
#
Ice.Default.Host=localhost

#
# For JavaScript browser clients using a secure WebSocket (WSS),
# you should disable this property. Client-side authentication
# is not supported with JavaScript browser clients.
#
#IceSSL.VerifyPeer=0

#
# Warn about connection exceptions
#
Ice.Warn.Connections=1

#
# Network Tracing
#
# 0 = no network tracing
# 1 = trace connection establishment and closure
# 2 = like 1, but more detailed
# 3 = like 2, but also trace data transfer
#
#Ice.Trace.Network=1

#
# Protocol Tracing
#
# 0 = no protocol tracing
# 1 = trace protocol messages
#
#Ice.Trace.Protocol=1

#
# Security Tracing
#
# 0 = no security tracing
# 1 = trace messages
#
#IceSSL.Trace.Security=1

#
# SSL Configuration
#

# Ice.Plugin.IceSSL=1

# Ice.Plugin.IceSSL=IceSSL:createIceSSL
# IceSSL.Ciphers=DEFAULT:DSS

Ice.Plugin.IceSSL=IceSSLOpenSSL:createIceSSLOpenSSL
IceSSL.Ciphers=ADH:!LOW:!MD5:!EXP:!3DES:@STRENGTH
IceSSL.VerifyPeer=0

IceSSL.DefaultDir=certs
IceSSL.CAs=cert.crt
IceSSL.CertFile=cert.pfx
IceSSL.Password=home

#IceSSL.CertFile=cert_rsa.pfx:cert_dsa.pfx
#IceSSL.CertFile=server.p12
#IceSSL.Keychain=certs/server.keychain
#IceSSL.KeychainPassword=home

#
# IceMX configuration.
#
#Ice.Admin.Endpoints=tcp -p 10004
Ice.Admin.InstanceName=server
IceMX.Metrics.Debug.GroupBy=id
IceMX.Metrics.ByParent.GroupBy=parent
